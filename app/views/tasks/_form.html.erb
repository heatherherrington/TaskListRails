<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :is_completed %>
  <%= f.check_box :is_completed %>

  <%= f.label :completed_at %>
  <%= f.date_field :completed_at %>

  <%= f.submit %>
<% end %>

<%= link_to("Back to the Tasks", tasks_path) %>
